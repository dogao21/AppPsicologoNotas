<table>
  <thead>
    <tr>
      <th>Num</th>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Operaciones</th>
    </tr>
  </thead>

  <tbody>

    {{#each tasks}}
      <tr>
        <td>
          {{@index}}

        </td>
        <td>
          {{titulo}}
        </td>
        <td>
          {{descripcion}}
        </td>
        <td>
          {{#if done}}
            <a href="/tasks/{{_id}}/toggleDone">Undone</a>
          {{else}}
            <a href="/tasks/{{_id}}/toggleDone">Done</a>
          {{/if}}

          <a href="/tasks/{{_id}}/delete">Borrar</a>
          <a href="/tasks/{{_id}}/edit">Editar</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>