<div class="card card-body p-4 rounded-0 bg-dark text-white">

  <h3>Anade una tarea</h3>
  <form action="/tasks/add" method="POST">

    <div>
      <label for="title">Escribe un titulo</label>

      <input
        type="text"
        name="titulo"
        placeholder="Titulo"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <div>
      <label for="descripcion">Escribe una tarea</label>

      <textarea
        name="descripcion"
        placeholder="Escribe tu descripcion"
        id="description"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>

    <button class="btn btn-primary btn-sm mt-2">
      Agregar
    </button>

  </form>
</div>