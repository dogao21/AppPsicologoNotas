<form action="/edit/{{task._id}}" method="POST">

  <input
    type="text"
    name="titulo"
    placeholder="titulo"
    value="{{task.titulo}}"
  />

  <textarea
    name="descripcion"
    rows="3"
    placeholder="agrega una descripcion"
  >{{task.descripcion}}</textarea>

  <button>Update</button>
</form>